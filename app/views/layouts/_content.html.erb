<section class="site-content site-section">
    <div class="container">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-4 col-lg-3">
                <aside class="sidebar site-block">
                    <!-- Store Menu -->
                    <!-- Store Menu functionality is initialized in js/app.js -->
                    <div class="sidebar-block">
                        <ul class="store-menu">
                            <li><%= link_to "Home", root_path %></li>
                            <li><%= link_to "Abstract Submission", abstract_submission_path %></li>
                            <li><%= link_to "Registration", registration_path %></li>
                            <li><%= link_to "Organizers/Committees", committees_path %></li>
                            <li><%= link_to "Invited Speakers", speakers_path %></li>
                            <li><%= link_to "Program", program_path %></li>
                            <li><%= link_to "Presentation", presentation_path %></li>
                            <li><%= link_to "Publication", publication_path %></li>
                            <li><%= link_to "Conference Venue", venue_path %></li>
                            <li><%= link_to "Hotel Reservation", hotel_path %></li>
                            <li><%= link_to "Transportation", transportation_path %></li>
                            <li><%= link_to "Field Trip", field_trip_path %></li>
                            <li><%= link_to "Sponsors", sponsors_path %></li>
                            <li><%= link_to "Contact Us", contact_path %></li>
                            <% if logged_in? %>
                              <li><%= link_to "Users", "#" %></li>
                              <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                  Account <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu">
                                  <li><%= link_to "Profile", current_user %></li>
                                  <li><%= link_to "Settings", '#' %></li>
                                  <li class="divider"></li>
                                  <li>
                                    <%= link_to "Log out", logout_path, method: :delete %>
                                  </li>
                                </ul>
                              </li>
                            <% else %>
                              <li><%= link_to "Log in", login_path %></li>
                            <% end %>
                        </ul>
                    </div>
                    <div class="sidebar-block">
                      <div class="clearfix">
                          <span class="h4"><strong class="text-success">About San Antonio</strong><br></span>
                          <div class="block" style="margin-top: 10px;">
                              <%= link_to image_tag("placeholders/photos/SA_thumbnail.jpg", alt: "About San Antonio"),
                                        'https://en.wikipedia.org/wiki/San_Antonio' %>
                          </div>
                          <h5><%= link_to "Learn more", "https://en.wikipedia.org/wiki/San_Antonio", style: "color: red;" %><h5>
                      </div>
                    </div>
                    <div class="sidebar-block">
                      <div class="clearfix">
                          <span class="h4"><strong class="text-success">Conference Venue</strong><br></span>
                          <div class="block" style="margin-top: 10px;">
                              <%= link_to image_tag("placeholders/photos/venue.jpg", alt: "Hilton Palacio del Rio, San Antonio, TX"), venue_path%>
                          </div>
                          <h4><b>Hilton Palacio del Rio</b></h4>
                          <p>Address: 200 S Alamo St, San Antonio, TX 78205<br>
                             Phone: (210) 222-1400
                          </p>
                          <h5><%= link_to "Learn more", venue_path, style: "color: red;" %><h5>
                      </div>
                    </div>
                    <div class="sidebar-block">
                      <div class="clearfix">
                          <span class="h4"><strong class="text-success">Nearby Attractions</strong><br></span>
                          <div class="block" style="margin-top: 10px;">
                              <%= link_to image_tag("placeholders/photos/Alamo.png", alt: "Alamo Mission in San Antonio"),
                                        'http://vacationidea.com/destinations/best-things-to-do-in-san-antonio-tx.html' %>
                          </div>
                          <h5><%= link_to "Learn more", "http://vacationidea.com/destinations/best-things-to-do-in-san-antonio-tx.html", style: "color: red;" %><h5>
                      </div>
                    </div>
                    <!-- END Store Menu -->

                </aside>
            </div>
            <!-- END Sidebar -->

            <!-- Main -->
            <div class="col-md-8 col-lg-9">
                <div class="row" data-toggle="lightbox-gallery">
                    <%= yield %>
                </div>
            </div>
            <!-- END Main -->
        </div>
    </div>
</section>
