<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      Please fix these <%= pluralize(@user.errors.count, 'error') %> and retry
    </div>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
